<table>
  <tbody>
    <% @state.each do |col| %>
      <tr>
      <% col.each do |row| %>
        <td><%= row %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<form action='<%= drop_piece_path %>' method='post'>
  <input type="radio" name="choice" value="0">1
  <input type="radio" name="choice" value="1">2
  <input type="radio" name="choice" value="2">3
  <input type="radio" name="choice" value="3">4
  <input type="radio" name="choice" value="4">5
  <input type="radio" name="choice" value="5">6
  <input type="radio" name="choice" value="6">7
  <input type="submit" value="Submit">
  <input  type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">
</form>

<%= link_to "Reset Game", connectfour_path %>

<% if @winner %>
  <%= "#{@winner}'s win!" %>
<% end %>
